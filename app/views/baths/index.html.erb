<div class="container-fluid">
  <%# 曜日ボタン %>
  <div class="btn-group" role="group" aria-label="Day-of-the-week">
    <%= link_to '月曜日', baths_path, class: "btn btn-outline-info nav-link", role: "button" %>
    <%= link_to '火曜日', baths_path, class: "btn btn-outline-info nav-link", role: "button" %>
    <%= link_to '水曜日', baths_path, class: "btn btn-outline-info nav-link", role: "button" %>
