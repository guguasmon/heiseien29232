<div class="container-fluid">
  <%# 曜日ボタン %>
    <div class="container d-flex justify-content-center my-3">
      <div class="btn-group" role="group" aria-label="Day-of-the-week">
        <%= link_to '全表示', foods_path, class: "btn btn-outline-info nav-link", id: "all", role: "button" %>
        <%= link_to '月曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 1, visit2_id_eq: 1}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "monday", role: "button" %>
        <%= link_to '火曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 2, visit2_id_eq: 2}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "tuesday", role: "button" %>
        <%= link_to '水曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 3, visit2_id_eq: 3}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "wednesday", role: "button" %>
        <%= link_to '木曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 4, visit2_id_eq: 4}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "thursday", role: "button" %>
        <%= link_to '金曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 5, visit2_id_eq: 5}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "friday", role: "button" %>
        <%= link_to '土曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 6, visit2_id_eq: 6}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "saturday", role: "button" %>
        <%= link_to '日曜日', foods_path(q: {g: {'1': {m: 'or', visit1_id_eq: 7, visit2_id_eq: 7}, '0': {user_id_eq: "#{current_user.id}"}}}), class: "btn btn-outline-info nav-link", id: "sunday", role: "button" %>
      </div>
    </div>
 <%# /曜日ボタン %>

  <div class="container-fluid">
    <%# タイトル %>
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <h1 class="text-center">食事提供表</h1>
        </div>
      </div>
      <div class="mb-3 d-flex justify-content-end">
        <button type="button" class="btn btn-success print printing"><i class="fas fa-print" aria-hidden="true"></i>この表を印刷する</button> 
      </div>
      <div class="row mb-3">
        <div class="col text-left">
          <h3 id="day-of-the-week">全表示</h3>
        </div>
        <div class="col text-right">
        <h3><%= "利用者　#{@count}名" if @count %></h3>
        </div>
      </div>
    </div>
    <%# /タイトル %>
    <table class="table table-striped table-bordered table-hover table-clickable">
      <caption>食事提供表</caption>
      <thead class="thead-dark">
        <tr>
          <th scope="col"><%= sort_link(@p, :guest_first_name_kana, "名前") %></th>
          <th scope="col"><%= sort_link(@p, :staple_type_id, "主食の形態") %></th>
          <th scope="col"><%= sort_link(@p, :staple_amount_id, "主食の量") %></th>
          <th scope="col"><%= sort_link(@p, :main_dish_type_id, "主菜の形態") %></th>
          <th scope="col"><%= sort_link(@p, :main_dish_amount_id, "主菜の量") %></th>
          <th scope="col"><%= sort_link(@p, :side_dish_type_id, "副菜の形態") %></th>
          <th scope="col"><%= sort_link(@p, :side_dish_amount_id, "副菜の量") %></th>
          <th scope="col"><%= sort_link(@p, :banned_food, "禁止食材") %></th>
          <th scope="col"><%= sort_link(@p, :denture_id, "義歯") %></th>
          <th scope="col"><%= sort_link(@p, :low_salt, "塩分制限") %></th>
          <th scope="col"><%= sort_link(@p, :soup_thick, "汁物のとろみ") %></th>
          <th scope="col"><%= sort_link(@p, :remark_food, "食事の備考") %></th>
          <th scope="col">禁止食材</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <%= render partial: "shared/food", locals: { food: food } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= javascript_pack_tag 'day-active' %>