          <thead class="thead-dark">
            <tr>
              <th scope="col"></th>
              <th scope="col">名前</th>
              <th scope="col">水分の備考</th>
              <th scope="col">とろみ</th>
              <th scope="col">温</th>
              <th scope="col">DM</th>
            </tr>
          </thead>
          <tbody>
            <% @milk_guests.each do |guest| %>
